<%- layout('layouts/boilerplate') %>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <h1 class="mb-4">All Campgrounds</h1>
    <ul>
        <% for(let campground of campgrounds){ %>
            <div class="card mt-2">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length !== 0){ %>
                        <img class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                        <% } else { %>
                        <img class="img-fluid" src="https://res.cloudinary.com/dkdmbqzaq/image/upload/v1677397702/YelpCamp/f85vitpvbit59jwabiad.jpg" alt="">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>

                            <a class="btn btn-primary mt-auto" href="/campgrounds/<%= campground._id %>">View <%=
                                    campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>
    
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'; 
    const campgrounds = { type: "FeatureCollection", features: <%-JSON.stringify(campgrounds)%> };
</script>

<script src="/javascripts/clusterMap.js"></script>